<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Expense Tracker</h1>
        <div class="mb-3">
            <a href="/add" class="btn btn-primary">Add Transaction</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                <tr>
                    <td><%= transaction.type %></td>
                    <td><%= transaction.category %></td>
                    <td><%= transaction.amount %></td>
                    <td><%= transaction.description %></td>
                    <td><%= transaction.date.toDateString() %></td>
                    <td>
                        <a href="/edit/<%= transaction._id %>" class="btn btn-warning">Edit</a>
                        <a href="/delete/<%= transaction._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
